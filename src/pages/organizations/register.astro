---
import LayoutCommon from '../../app/LayoutCommon.astro';
import { checkUserSession } from '../../utils/check-session-feature';

export const prerender = false;

// Debug logging
console.log("ðŸŽ¯ ORGANIZATION REGISTRATION LANDING PAGE REACHED!");
console.log("REGISTRATION LANDING: URL pathname:", Astro.url.pathname);

// Basic session check for enhanced registration flow
const response = await checkUserSession(Astro.request, Astro.url.pathname);
console.log("REGISTRATION LANDING: Session check response:", { authorized: response.authorized, permitted: response.permitted, redirect: response.redirect });

// If not authorized at all, redirect to sign-in
if (!response.authorized) {
  console.log("REGISTRATION LANDING: Not authorized, redirecting to sign-in");
  return Astro.redirect('/authentication/sign-in');
}
